<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/msgReceived"
            android:layout_marginRight="@dimen/chat_margin"
            android:background="@drawable/bubble_in"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/msgSent"
            android:layout_gravity="right"
            android:text="@string/app_name"
            android:layout_marginLeft="@dimen/chat_margin"
            android:background="@drawable/bubble_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>
